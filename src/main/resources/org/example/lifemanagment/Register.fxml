<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.lifemanagment.auth.RegisterController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Forma: labele lijevo -->
    <VBox spacing="6" alignment="TOP_LEFT">
        <Label text="Username:" />
        <TextField fx:id="usernameField" promptText="Choose username"/>

        <Label text="Password:" />
        <PasswordField fx:id="passwordField" promptText="Choose password"/>
    </VBox>

    <!-- Dugme: centrirano -->
    <VBox alignment="CENTER">
        <Button text="Create Account" onAction="#handleRegister"/>
    </VBox>

</VBox>
